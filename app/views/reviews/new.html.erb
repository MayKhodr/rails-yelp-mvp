<div class="container m-3">
<h3>Add your review to <%= @restaurant.name %></h3>
<%= simple_form_for [@restaurant, @review] do |f| %>

  <div class="form-inputs">
    <%= f.input :content %>
    <%= f.input :rating %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>

<% end %>
</div>



